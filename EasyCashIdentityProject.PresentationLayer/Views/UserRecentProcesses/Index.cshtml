@model List<CustomerAccountProcess>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/CustomerLayout/Index.cshtml";
}

<!-- page content -->
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>My Recent Transactions</h3>
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Recent Transactions in Turkish Lira</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                  
                        <li>
                            <a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <ul class="list-unstyled timeline">
                        @foreach (var item in Model)
                        {
                            <li>
                                <div class="block">
                                    <div class="tags">
                                        <a href="" class="tag">
                                            <span>@item.TransactionType</span>
                                        </a>
                                    </div>
                                    <div class="block_content">
                                        <h2 class="title">
                                            <a>Sender : <strong>@item.SenderCustomer.AppUser.Name @item.SenderCustomer.AppUser.Surname</strong> --- Receiver : <strong>@item.ReceiverCustomer.AppUser.Name @item.ReceiverCustomer.AppUser.Surname</strong></a>
                                        </h2>
                                        <div class="byline">
                                            <span>@item.TransactionDate</span>
                                        </div>
                                        <p class="excerpt">
                                            @item.Description
                                        </p>
                                    </div>
                                </div>
                            </li>
                        }
                    </ul>

                </div>
            </div>
        </div>

    </div>
    <div class="clearfix"></div>
</div>
<!-- /page content -->

